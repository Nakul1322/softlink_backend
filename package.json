{
  "name": "softlink-api",
  "homepage": "https://github.com/Digital-Medium-Africa/softlink-api#readme",
  "version": "1.0.0",
  "description": "",
  "main": "server/index.js",
  "scripts": {
    "type": "module",
    "log:clear": "rm logs/*.log",
    "build:clear": "rm -rf build coverage .nyc_output",
    "compile": "babel server -d build --copy-files",
    "heroku-prebuild": "npm run create:JWTKeys",
    "build": "run-s build:clear compile",
    "migrate:leads": "babel-node ./migrate/leads",
    "pm2:link": "node -r esm build/pm2/pm2.link.js linkServerToPM2",
    "pm2:stop": "pm2 stop build/pm2/ecosystem.config.json",
    "pm2:restart": "pm2 restart build/pm2/ecosystem.config.json",
    "pm2:reload": "pm2 reload build/pm2/ecosystem.config.json",
    "pm2:delete": "pm2 delete build/pm2/ecosystem.config.json",
    "start:staging": "npx cross-env NODE_ENV=staging pm2 start build/pm2/ecosystem.config.json --only staging",
    "start:dev": "npx cross-env NODE_ENV=development nodemon --exec babel-node server/index.js",
    "start:prod": "npx cross-env NODE_ENV=production nodemon --exec babel-node server/index.js",
    "start": "npx cross-env NODE_ENV=production pm2 start build/pm2/ecosystem.config.json --only softlink-api",
    "lint": "eslint server --fix",
    "create:JWTKeys": "openssl genrsa -out .private.pem 4096 && openssl rsa -in .private.pem -pubout > .public.pem",
    "create:HerokuSources": "tar -cvf app-sources.tar.gz .",
    "docker:buildApp": "docker build . -t softlink-api:beta",
    "docker:runApp": "docker run --name softlink-api -d -p 8080:5000 --env-file .env softlink-api:beta",
    "docker:buildTest": "docker build . -t softlink-api-test -f Dockerfile_test",
    "docker:runTest": "docker run --rm --env-file .env softlink-api-test",
    "docker:destroy": "docker-compose down -v",
    "docker:killAll": "docker kill $(docker ps -q) && docker rm $(docker ps -a -q) && docker rmi $(docker images -q)",
    "test": "cross-env NODE_ENV=test echo 'Simulating Test...' && sleep 10 && echo 'All Tests Passed...' && exit 0"
  },
  "nyc": {
    "exclude": [
      "src/index.js",
      "src/logs/*",
      "src/config/*",
      "src/database/*"
    ]
  },
  "engines": {
    "node": "12.16.3",
    "npm": "6.14.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Digital-Medium-Africa/softlink-api.git"
  },
